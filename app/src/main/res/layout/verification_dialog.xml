<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">

        <ImageButton
            android:id="@+id/close"
            android:elevation="10dp"
            android:background="@color/panel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:src="@drawable/ic_close_white"/>

        <LinearLayout

            android:padding="15dp"
            android:orientation="vertical"
            android:background="@color/panel"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VERIFICATION"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="18sp"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_verification_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We need to verify your ID."
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginBottom="10dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:elevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/light_panel"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="In order for you to be a legitimate seller, youâ€™ll need to send a valid ID "
                        android:textColor="@color/white"
                        android:fontFamily="@font/montserrat_regular"
                        android:textAlignment="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue"
                        android:text="Account Verification Process"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:textAlignment="center"/>

                    <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/find"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/ic_find_image" />

                        <TextView
                            android:id="@+id/take"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_toEndOf="@id/find"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="Take ID Photo"
                            android:textColor="@color/white"
                            android:textSize="16sp" />
                        <TextView
                            android:layout_below="@id/take"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/find"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="Must be valid ID."
                            android:textColor="@color/blue"/>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <ImageView
                            android:id="@+id/info"
                            android:layout_marginEnd="10dp"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_blue_info" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="5dp"
                            android:layout_toEndOf="@id/info"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="Fill up information"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/verify_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get Verified"

                android:layout_marginTop="15dp"
                android:textColor="@color/blue"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:background="@drawable/outline_blue_btn"
                android:textAllCaps="false"/>







        </LinearLayout>



    </androidx.cardview.widget.CardView>



</RelativeLayout>