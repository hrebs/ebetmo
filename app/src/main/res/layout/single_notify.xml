<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_panel"
        android:layout_marginBottom="3dp"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/round"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="5dp">

            <ImageView
                android:id="@+id/notify_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/default_image" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@id/round"
            android:fontFamily="@font/montserrat_bold"
            android:singleLine="true"
            android:text="item name"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/winner_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_name"
            android:layout_toEndOf="@id/round"
            android:fontFamily="@font/montserrat_regular"
            android:singleLine="true"
            android:text="Winner"
            android:textColor="@color/yellow"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_winner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/winner_title"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@id/round"
            android:fontFamily="@font/montserrat_regular"
            android:singleLine="true"
            android:text="Unknown"
            android:textColor="@color/white"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/date_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_winner"
            android:layout_toEndOf="@id/round"
            android:fontFamily="@font/montserrat_regular"
            android:singleLine="true"
            android:text="Date of raffle"
            android:textColor="@color/blue"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/date_title"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@id/round"
            android:fontFamily="@font/montserrat_regular"
            android:singleLine="true"
            android:text="00 00 00 "
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_id1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_date"
            android:layout_toEndOf="@id/round"
            android:fontFamily="@font/montserrat_regular"
            android:singleLine="true"
            android:text="owner name"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="invisible" />


    </RelativeLayout>



</RelativeLayout>